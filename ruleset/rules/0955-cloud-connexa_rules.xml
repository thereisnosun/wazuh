      <if_matched_sid>93030</if_matched_sid>
      <same_field>initiator</same_field>
      <description>CloudConnexa $(cloudId) WARN: $(initiator) Client connected more than 10 times during 60 seconds. Client UUID '$(log.clientUUID)'</description>
    </rule>

    <!-- Frequent IDS events with priority 1 -->
